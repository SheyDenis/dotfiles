# git aliases

alias git-list-gone='git for-each-ref --format "%(refname) %(upstream:track)" refs/heads | grep "\[gone\]" | sed -e "s/refs\/heads\///" -e "s/ \[gone\]//"'
alias git-confirm-clear-gone='echo "About to clear gone branches:\n\n$(git-list-gone)\n" ; read -q "RES_?Continue?"'
alias git-clear-gone='git-confirm-clear-gone && echo "\n" ; for b in $(git-list-gone); do git branch -D "${b}"; done'
