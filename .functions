# ~/.functions
#

function pacman(){
	# Allow to pre-download packages using SUDO, but not install or remove them.
	if [ $# == 1 -a $1 == "-Syuw" ]; then
		sudo pacman -Syuw
		return
	fi
	if [ $1 == "-Sw" ]; then
		shift
		args=$@
		echo $args | grep -E -- "[^a-zA-Z0-9. -]"
		if [ $? == 1 ]; then
			sudo pacman -Sw $args
		fi
		return
	fi
	if [ $1 == "-S" -o $1 == "-R" -o $1 == "-Rs" -o $1 == "-Syuw" -o $1 == "-U" ]; then
		args=$@
		su -c "pacman $args"
		return
	fi
	command pacman $@
	return
}

function blink(){
	# Makes the terminal window label in the application list to bold.

	window_title="$(wmctrl -l | grep "$(printf '0x0%x' ${WINDOWID})" | awk '{for (i = 4; i <= NF; i++){ printf "%s" $i, OFS} print "" }')"
	if [ -z "${window_title}" ]; then
		window_title="Window title missing!"
	fi

	for flag in ${@}; do
		if [ "${flag}" == '-n' ]; then
			notify-send -t 0 "$(date)" "${window_title}"
			break
		fi
	done

	[ -n "${WINDOWID}" ] && wmctrl -i -r "${WINDOWID}" -b add,demands_attention
	return
}

